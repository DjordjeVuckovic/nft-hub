{
  "name": "@cbs/nft-hub",
  "version": "0.0.1",
  "description": "NFT hub",
  "scripts": {
    "dev:all": "npm-run-all --parallel --continue-on-error dev:be dev:fe",
    "dev:be": "cd apps/be && npm run start:dev",
    "dev:fe": "cd apps/fe && npm run dev",
		"cp-abi:be": "cd apps/be && mkdir -p ./src/eth/abi && jq '.abi' ../../contracts/nft-hub-eth/artifacts/contracts/NFTHub.sol/NFTHub.json > ./src/eth/abi/nft-hub.abi.json",
		"cp-abi:fe": "cd apps/fe && mkdir -p ./src/eth/abi && jq '.abi' ../../contracts/nft-hub-eth/artifacts/contracts/NFTHub.sol/NFTHub.json > ./src/eth/abi/nft-hub.abi.json",
		"cp-nft-data": "jq '.nfts' ./tools/nft-seeder/assets/seeder-output.json > ./contracts/nft-hub-eth/assets/nft-data.json"
	},
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.0"
}
